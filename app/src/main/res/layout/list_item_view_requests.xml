<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/viewRequestsDetailsListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Details goes here"
                android:textSize="26sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/viewRequestsAddressListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address goes here"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/viewRequestsStatusListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status goes here"
                android:textColor="@color/black"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/viewRequestsDateListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date goes here"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>